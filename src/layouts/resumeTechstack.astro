---
import Techstack from "../components/Techstack.astro";
const { sectitle } = Astro.props;
import { getCollection } from 'astro:content';
const allEntries = await getCollection('techstack');
---
<section class="tech-stack-section--page print-break-avoid">

    <h2 class="section-heading--h2">{sectitle}</h2>
    <div class="line-break"></div>
    <div class="card--generic">
        <article class="grid--techstack">
            {
                allEntries
                    .sort( ( a, b ) => a.data.id - b.data.id )
                    .map( e =>
                        <Techstack
                            heading={e.data.heading}
                            body={e?.body ?? ''}
                        />
                    )
            }
        </article>
    </div>
</section>